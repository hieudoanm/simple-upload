{
  "compilerOptions": {
    /* ========================
       File Layout
    ======================== */
    "rootDir": ".",
    "outDir": "./dist",

    /* ========================
       Environment
    ======================== */
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "jest"],

    /* ========================
       Output
    ======================== */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ========================
       Type Safety
    ======================== */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* ========================
       Module & Build Behavior
    ======================== */
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noUncheckedSideEffectImports": true,

    /* ========================
       Quality of Life
    ======================== */
    "skipLibCheck": true
  },
  "include": ["src", "tests", "eslint.config.mts", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
